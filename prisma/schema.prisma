datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int      @id @default(autoincrement())
    email     String   @unique
    password  String
    fullName  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id        Int      @id @default(autoincrement())
    name      String
    image     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
